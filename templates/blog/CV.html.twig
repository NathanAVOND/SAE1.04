{% extends 'base.html.twig' %}
{% block body %}
<br>
<p>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mon CV</title>
    <style>
        body {
            font-family: Arial Narrow;
            margin: 0;
            padding: 0;
            color: white;
        }

        .container {
            font-family: Arial Narrow;
            width: 80%;
            max-width: 900px;
            margin: 30px auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            color: black;
        }

        header {
            text-align: center;
            border-bottom: 2px solid black;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        header h1 {
            margin: 0;
            font-size: 36px;
            color: black;
        }

        header p {
            font-size: 18px;
            color: black;
        }

        section {
            margin-bottom: 20px;
        }

        .section-title {
            font-size: 24px;
            color: black;
            border-bottom: 2px solid black;
            padding-bottom: 5px;
            margin-bottom: 10px;
        }

        ul {
            list-style-type: none;
            padding-left: 0;
        }

        li {
            margin-bottom: 10px;
            font-size: 16px;
        }

        .bold {
            font-weight: bold;
        }
        .téléchargement{
            text-align: center;
        }

    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>AVOND Nathan</h1>
            <p>E-mail : nathan.avond@gmail.com </p>
            <p>Mon objectif professionnel est de spécialiser en expert-cybersécurité</p>
        </header>
        <section>
            <h2 class="section-title">Formations</h2>
            <ul>
                <li>
                    <span class="bold">2024 - 2025 :</span> BUT RT, 1<sup>ère</sup> année à l'IUT Jean-Monnet à Roanne
                </li>
                <li>
                    <span class="bold">2021 - 2024 :</span> Bac STI2D au Lycée Carnot à Roanne reçu avec mention assez bien
                </li>
                <li>
                    <span class="bold">2021 :</span> Brevet des collèges, Collège Louis Aragon à Mably
                </li>
            </ul>
        </section>
        <section>
            <h2 class="section-title">Expériences Professionnelles</h2>
            <ul>
                <li>
                    <span class="bold"> 2020 :</span> Stage découverte dans un cabinet d'architecture (Equilibre Architecte) à Mably
                </li>
            </ul>
        </section>
        <section>
            <h2 class="section-title">Compétences</h2>
            <ul>
                <li>Word, PowerPoint, Excel</li>
                <li>Certification Pix</li>
                <li>Certification MOOC</li>
                <li>Ponctualité</li>
                <li>Rigueur</li>
                <li>Sérieux</li>
            </ul>
        </section>
        <section>
            <h2 class="section-title">Langues</h2>
            <ul>
                <li><span class="bold">Français :</span> Langue maternelle</li>
                <li><span class="bold">Anglais :</span> Niveau A2</li>
                <li><span class="bold">Italien :</span> Niveau A2</li>
            </ul>
        </section>
    </div>
    <div class="téléchargement">
    <h2 class="titre">Télécharger</h2>
    <form id="telechargerForm" onsubmit="return handleFormSubmit(event)">
        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="nom" required><br>
        <br>
        <label for="prenom">Prénom :</label>
        <input type="text" id="prenom" name="prenom" required><br>
        <br>
        <label for="email">E-mail :</label>
        <input type="email" id="email" name="email" required><br>
        <br>
        <button type="submit" class="btn btn-outline-light">Valider</button>
    </form>
</div>

<script>
    function handleFormSubmit(event) {
        event.preventDefault(); // Empêche l'envoi classique du formulaire

        // Récupère les valeurs des champs
        const nom = document.getElementById('nom').value.trim();
        const prenom = document.getElementById('prenom').value.trim();
        const email = document.getElementById('email').value.trim();

        // Vérifie si tous les champs sont remplis
        if (!nom || !prenom || !email) {
            alert("Veuillez remplir tous les champs avant de confirmer.");
            return false;
        }

        // Si les champs sont valides, lance le téléchargement
        const downloadLink = document.createElement('a');
        downloadLink.href = '/Images/CV.pdf'; // Chemin du fichier à télécharger
        downloadLink.download = 'CV.pdf';  // Le nom du fichier téléchargé
        downloadLink.click(); // Simule un clic sur le lien pour déclencher le téléchargement
        return true;
    }
</script>
</body>
</p>
{% endblock %}